<ion-header>
  <ion-toolbar color="dark-blue">
    <span>
      <button ion-button icon-only clear id="view_back_button" (click)="back()">
        <ion-icon name="ios-arrow-back"></ion-icon>
        View
      </button>
    </span>
    <img src="assets/imgs/header-logo.png" style="width: 80px;margin-right: 10px;">
  </ion-toolbar>
</ion-header>
<ion-content>
  <div class="play_bg">
    <img src="assets/imgs/music.jpg" class="vote_images">
    <div class="play_content">
      <span>
        <h2>{{UserDetails.title}}</h2>
        <p><span><ion-icon name="ios-person-outline"></ion-icon>{{UserDetails.user.first_name}}</span><span><ion-icon name="ios-star-outline"></ion-icon>{{UserDetails.votes.length}}</span><span><ion-icon name="ios-trophy-outline"></ion-icon>Rank1</span></p>
      </span>
      <span class="vote">
      <button ion-button icon-only clear (click)="updateVote()">   
        <ion-icon 
          [name]="voteIcon ? 'ios-star' :'ios-star-outline'"  [ngClass]="{ 'noStar': voteIcon === false,'star': voteIcon === true }">
        </ion-icon>
      </button>
        <button ion-button icon-only (click)="regularShare(i)" clear>
          <ion-icon name="md-share" ></ion-icon>
        </button>
      </span>
    </div>
  </div>
  <ion-item class="comment">
    <ion-avatar item-start>
      <img src="assets/imgs/dynm-img.png">
    </ion-avatar>
    <div class="input-comment">
      <input type="text" name="" placeholder="Comment.." [(ngModel)]="Comments">
      <button ion-button icon-only clear (click)="uploadCmts()" [disabled]="!Comments">
        <ion-icon name="md-arrow-forward"></ion-icon>
      </button>
    </div>
  </ion-item>
  <ion-list inset class="user_list">
    <ion-item *ngFor="let user of setCmts">
      <ion-avatar item-start>
        <img src="assets/imgs/person.jpg">
      </ion-avatar>
      <h2>{{user.message}}</h2>
      <p><span>{{user.user.first_name}}</span><span>{{user.updated_at}}</span></p>
    </ion-item>
  </ion-list>
</ion-content>
