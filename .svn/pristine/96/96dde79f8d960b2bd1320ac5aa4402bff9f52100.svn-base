page-signup {
	.ion-content {
	    background: url("../assets/imgs/bg.jpg") no-repeat center center fixed; 	  
     }
    .images_logo{
    	text-align:center;
    	padding: 40px 75px 0px;
    }
	.item-input-has-focus .label-md[floating], .input-has-focus .label-md[floating], .item-input-has-focus .label-ios[floating], .input-has-focus .label-ios[floating] {
	    color: #fdc629;
	}
	.item-md.item-input.item-input-has-focus .item-inner, .item-md.item-input.input-has-focus .item-inner, .item-ios.item-input.item-input-has-focus .item-inner, .item-ios.item-input.input-has-focus .item-inner {
	    border-bottom-color: #fdc629;
	    -webkit-box-shadow: inset 0 -1px 0 0 #fdc629;
	    box-shadow: inset 0 -1px 0 0 #fdc629;
	}
	.item-input {
	    padding-left: 0px;
	    color: #fff;
	    background-color: transparent;
	    font-size: 16px;
	    font-weight: 300;
	}
	.item-block .item-inner {
	    border-bottom: 1px solid #f0efef;
	}	
	.login-form {
	    padding: 0px 35px;
	}
	.button-default {
	    background-color: #0c5466;
	    font-weight: 500;
	    letter-spacing: 1px;
	    border-radius: 8px;
	    height: 4.2rem;
	}
	.button-default.activated, .button-default:hover:not(.disable-hover){
		background-color: #0c5466;
	}
	.button-clear-md, .button-clear-ios{
	 	color: #c7c9cd;
	 	font-weight: 300;
	}
}
